---
export interface Props {
  leadText?: string;
  heading?: string;
}
const { leadText, heading } = Astro.props;
---

<div class="bg-white py-16">
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-prose text-lg">
      <h1>
        <span class="block text-center text-lg font-semibold text-orange-600"
          >{leadText}
        </span>
        <span
          class="mt-2 block text-center text-3xl font-bold leading-8 tracking-tight text-gray-900 sm:text-4xl"
        >
          {heading}
        </span>
      </h1>
      <div class="mt-8 text-xl prose text-gray-500">
        <slot name="sub-heading-copy" />
      </div>
    </div>

    <slot name="page-content" />
    <div class="prose prose-lg prose-orange mx-auto mt-6 text-gray-500">
      <slot name="copy" />
    </div>
  </div>
</div>
